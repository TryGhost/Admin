{
  "extends": [
    "config:base",
    "group:jsTestMonMajor",
    "group:linters",
    ":maintainlockfilesweekly
  ],
  "ignoreDeps": ["ember-drag-drop", "ember-infinity", "ember-in-viewport"],
  "ignorePaths": ["lib/koenig-editor/package.json"],  
  "travis": { "enabled": true },
  "node": {
    "supportPolicy": ["lts_latest"]
  },  
  "packageRules": [
    {
      "packagePatterns": ["ember"],
      "groupName": "ember"
    },
    {
      "packagePatterns": ["^postcss", "css", "autoprefixer"],
      "groupName": "css processors"
    }
  ]
}

<section class="gh-view">
    <header class="view-header">
        {{#gh-view-title openMobileMenu="openMobileMenu"}}<span>Navigation</span>{{/gh-view-title}}
        <section class="view-actions">
            {{#gh-spin-button class="btn btn-blue" action="save" submitting=submitting}}Save{{/gh-spin-button}}
        </section>
    </header>

    <section class="view-container">
        <form id="settings-navigation" class="gh-blognav" novalidate="novalidate">
            {{#sortable-group onChange=(action 'reorderItems') as |group|}}
                {{#each model.navigation as |navItem|}}
                    {{gh-navitem navItem=navItem baseUrl=blogUrl addItem="addItem" deleteItem="deleteItem" group=group}}
                {{/each}}
            {{/sortable-group}}
            {{gh-navitem navItem=newNavItem baseUrl=blogUrl addItem="addItem"}}
        </form>
    </section>
</section>

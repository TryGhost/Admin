<li>
    {{#if error.details}}
        {{{error.details}}}
    {{else}}
        {{{error.rule}}}
    {{/if}}

    <ul>
        {{#each error.failures as |failure|}}
            <li><code>{{failure.ref}}</code>{{#if failure.message}}: {{failure.message}}{{/if}}</li>
        {{/each}}
    </ul>
</li>

{{#if label}}
    <label for="{{inputId}}">{{label}}</label>
{{/if}}

{{gh-textarea
    value
    class=classes
    placeholder=placeholder
    name=name
    disabled=disabled
    focusOut=(action "focusOut")
    update=(action "update")
}}

{{#if hasError}}
    <p class="response">{{error}}</p>
{{else if hasBlock}}
    {{yield}}
{{else if helpText}}
    <p>{{helpText}}</p>
{{/if}}

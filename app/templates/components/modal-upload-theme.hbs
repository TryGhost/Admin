<header class="modal-header">
    <h1>
        {{#if theme}}
            {{#if hasWarningsOrErrors}}
                {{t "Upload successful with {{type}}" type=(if validationErrors (t "errors") (t "warnings"))}}
            {{else}}
                {{t "Upload successful!"}}
            {{/if}}
        {{else if (or validationErrors fatalValidationErrors)}}
            {{t "Invalid theme"}}
        {{else}}
            {{t "Upload a theme"}}
        {{/if}}
    </h1>
</header>
<a class="close" href="#" title="{{t "common.Close"}}" {{action "closeModal"}}>{{svg-jar "close"}}<span class="hidden">{{t "common.Close"}}</span></a>

<div class="modal-body">
    {{#if theme}}
        {{#if hasWarningsOrErrors}}
             <ul class="theme-validation-errors">
                <li>
                    <p>
                        {{t "\"{{themeName}}\" uploaded successfully but some {{type}} were detected." themeName=themeName type=(if validationErrors (t "errors") (t "warnings"))}}
                        {{t "You are still able to use and activate the theme. Here's your report..."}}
                    </p>
                </li>

                {{#if validationErrors}}
                    <div class="theme-validation-errordescription">
                        <h2 class="theme-validation-errortype">{{t "Errors"}}</h2>
                        <p><em>{{{t "(Very recommended to fix, functionality <span>could</span> be restricted)"}}}</em></p>
                    </div>
                {{/if}}
                {{#each validationErrors as |error|}}
                    <li class="theme-validation-item">
                        {{gh-theme-error-li error=error}}
                    </li>
                {{/each}}

                {{#if validationWarnings}}
                    <div class="theme-validation-errordescription">
                        <h2 class="theme-validation-errortype">{{t "Warnings"}}</h2>
                    </div>
                {{/if}}
                {{#each validationWarnings as |error|}}
                    <li class="theme-validation-item">
                        {{gh-theme-error-li error=error}}
                    </li>
                {{/each}}
            </ul>
        {{else}}
            <p>
                {{t "\"{{themeName}}\" uploaded successfully." themeName=themeName}}
                {{#if canActivateTheme}}{{t "Do you want to activate it now?"}}{{/if}}
            </p>
        {{/if}}
    {{else if displayOverwriteWarning}}
        <p>
            {{t "\"{{fileThemeName}}\" will overwrite an existing theme of the same name. Are you sure?" fileThemeName=fileThemeName}}
        </p>
    {{else if (or validationErrors fatalValidationErrors)}}
        <ul class="theme-validation-errors">
            {{#if fatalValidationErrors}}
                <div class="theme-validation-errordescription">
                    <h2 class="theme-validation-errortype fatal">{{t "Fatal Errors"}}</h2>
                    <p><em>{{t "(Must-fix to activate theme)"}}</em></p>
                </div>
            {{/if}}
            {{#each fatalValidationErrors as |error|}}
                <li class="theme-validation-item">
                    {{gh-theme-error-li error=error}}
                </li>
            {{/each}}

            {{#if validationErrors}}
                <div class="theme-validation-errordescription">
                    <h2 class="theme-validation-errortype">{{t "Errors"}}</h2>
                    <p><em>{{{t "(Very recommended to fix, functionality <span>could</span> be restricted)</em>"}}}</em></p>
                </div>
            {{/if}}
            {{#each validationErrors as |error|}}
                <li class="theme-validation-item">
                    {{gh-theme-error-li error=error}}
                </li>
            {{/each}}
        </ul>
    {{else}}
        {{gh-file-uploader
            url=uploadUrl
            paramName="theme"
            accept=accept
            labelText=(t "Click to select or drag-and-drop your theme zip file here.")
            validate=(action "validateTheme")
            uploadStarted=(action "uploadStarted")
            uploadFinished=(action "uploadFinished")
            uploadSuccess=(action "uploadSuccess")
            uploadFailed=(action "uploadFailed")
            listenTo="themeUploader"}}
    {{/if}}
</div>

<div class="modal-footer">
    <button {{action "closeModal"}} disabled={{closeDisabled}} class="gh-btn" data-test-close-button>
        <span>{{#if theme}}{{t "common.Close"}}{{else}}{{t "common.Cancel"}}{{/if}}</span>
    </button>
    {{#if displayOverwriteWarning}}
        <button {{action "confirmOverwrite"}} class="gh-btn gh-btn-red" data-test-overwrite-button>
            <span>{{t "Overwrite"}}</span>
        </button>
    {{/if}}
    {{#if validationErrors}}
        <button {{action "reset"}} class="gh-btn gh-btn-green" data-test-try-again-button>
            <span>{{t "Try Again"}}</span>
        </button>
    {{/if}}
    {{#if canActivateTheme}}
        <button {{action "activate"}} class="gh-btn gh-btn-green" data-test-activate-now-button>
            <span>{{t "Activate Now"}}</span>
        </button>
    {{/if}}
</div>

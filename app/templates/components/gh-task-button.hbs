{{#if hasBlock}}
    {{yield (hash
        isIdle=isIdle
        isRunning=isRunning
        isSuccess=isSuccess
        isFailure=isFailure
    )}}
{{else}}
    <span>
    {{#if isRunning}}{{inline-svg "spinner"}}{{/if}}
    {{if (or isIdle isRunning) buttonText}}
    {{#if isSuccess}}{{inline-svg "check-circle"}} {{successText}}{{/if}}
    {{#if isFailure}}{{inline-svg "close"}} {{failureText}}{{/if}}
    </span>
{{/if}}

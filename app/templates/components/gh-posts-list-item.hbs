<div class="gh-post-list-status">
    {{#if this.isScheduled}}
    <span class="gh-content-status-draft gh-badge">Scheduled</span>
    {{/if}}
    
    {{#if this.isDraft}}
    <span class="gh-content-status-draft gh-badge gh-badge-red">Draft</span>
    {{/if}}

    {{#if (and this.isPublished (not this.post.page))}}
    <span class="gh-content-status-published">Published</span>
    {{/if}}
</div>

<div class="gh-post-list-title">
    <h3 class="gh-content-entry-title">
        {{#link-to "editor.edit" this.post.displayName this.post.id class="permalink" title="Edit this post"}}
        {{this.post.title}}
        {{/link-to}}
    </h3>
    {{#if isScheduled}}
        <p>
            {{#if this.isFeatured}}
                <span class="gh-content-status-featured">{{svg-jar "star-filled"}} Featured</span>
            {{/if}}
            <span class="gh-schedule-time">Will go live {{gh-format-post-time this.post.publishedAtUTC scheduled=true}}</span>
            <span class="gh-schedule-subtext">&dash; {{this.subText}}</span>
        </p>
    {{else}}
        <p>
            {{#if this.isFeatured}}
                <span class="gh-content-status-featured">{{svg-jar "star-filled"}} Featured</span>
            {{/if}}
            {{this.subText}}
        </p>
    {{/if}}
</div>

<div class="gh-post-list-updated">
    {{gh-format-post-time this.post.updatedAtUTC draft=true}}
</div>

<div class="gh-post-list-author"><span class="gh-content-entry-author">{{this.authorNames}}</span></div>

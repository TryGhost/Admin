<header class="modal-header">
    <h1>{{t "Are you sure you want to delete this post?"}}</h1>
</header>
<a class="close" href="" title="{{t "Close"}}" {{action "closeModal"}}>{{svg-jar "close"}}<span class="hidden">{{t "Close"}}</span></a>

<div class="modal-body">
    <p>
        {{{t "You're about to delete \"<strong>{{name}}</strong>\". This is permanent! We warned you, k?" name=post.title}}}
    </p>
</div>

<div class="modal-footer">
    <button {{action "closeModal"}} class="gh-btn"><span>{{t "Cancel"}}</span></button>
    {{gh-task-button (t "Delete") successText=(t "Deleted") task=deletePost class="gh-btn gh-btn-red gh-btn-icon"}}
</div>

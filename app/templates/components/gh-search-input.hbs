<PowerSelect
    @search={{action "search"}}
    @onChange={{action "openSelected"}}
    @placeholder="Search site..."
    @searchEnabled={{false}}
    @triggerComponent="gh-search-input-trigger"
    @renderInPlace={{true}}
    @loadingMessage="Loading"
    as |name select|
>
    {{highlighted-text name.title select.searchText}}
</PowerSelect>

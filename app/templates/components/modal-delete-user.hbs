<header class="modal-header">
    <h1>{{t "Are you sure you want to delete this user?"}}</h1>
</header>
<a class="close" href="" title="{{t "common.Close"}}" {{action "closeModal"}}>{{svg-jar "close"}}<span class="hidden">{{t "common.Close"}}</span></a>

<div class="modal-body">
    <p>{{{t "<strong>WARNING:</strong> You are about to delete the user '<strong>{{name}}</strong>'. There is no way to recover this." name=user.name}}}</p>
    {{#if user.count.posts}}
        <ul>
            <li>{{t "The user will not have access to this blog anymore"}}</li>
            <li>{{{t "<strong>{{postsCount}}</strong> created by this user will be deleted" postsCount=(t 'post' count=user.count.posts)}}}</li>
            <li>{{t "All other user data will be deleted"}}</li>
        </ul>
    {{else}}
        <ul>
            <li>{{t "User will not have access to this blog anymore"}}</li>
            <li>{{t "All user data will be deleted."}}</li>
        </ul>
    {{/if}}
</div>

<div class="modal-footer">
    <button {{action "closeModal"}} class="gh-btn"><span>{{t "common.Cancel"}}</span></button>
    {{#if user.count.posts}}
        {{gh-task-button (t "taskButton.Delete user and their posts") successText=(t "taskButton.Deleted") task=deleteUser class="gh-btn gh-btn-red gh-btn-icon"}}
    {{else}}
        {{gh-task-button (t "taskButton.Delete user") successText=(t "taskButton.Deleted") task=deleteUser class="gh-btn gh-btn-red gh-btn-icon"}}
    {{/if}}
</div>

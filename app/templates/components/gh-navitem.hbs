{{#unless navItem.isNew}}
    <span class="gh-blognav-grab icon-grab">
        <span class="sr-only">Reorder</span>
    </span>
{{/unless}}

<div class="gh-blognav-line">
    {{#gh-validation-container "label" navItem.changeset formGroup=false tagName="span" class="gh-blognav-label" as |value actions|}}
        {{gh-trim-focus-input value shouldFocus=navItem.last placeholder="Label" update=actions.update focusOut=actions.focusOut}}
    {{/gh-validation-container}}

    {{#gh-validation-container "url" navItem.changeset formGroup=false tagName="span" class="gh-blognav-url" as |value actions|}}
        {{gh-navitem-url-input value baseUrl=baseUrl update=actions.update focusOut=actions.focusOut}}
    {{/gh-validation-container}}
</div>

{{#if navItem.isNew}}
    <button type="button" class="gh-blognav-add" {{action "addItem"}}>
        <i class="icon-add2"><span class="sr-only">Add</span></i>
    </button>
{{else}}
    <button type="button" class="gh-blognav-delete" {{action "deleteItem" navItem}}>
        <i class="icon-trash"><span class="sr-only">Delete</span></i>
    </button>
{{/if}}

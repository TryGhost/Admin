<section class="gh-canvas">
    <GhCanvasHeader class="gh-canvas-header">
        <h2 class="gh-canvas-title" data-test-screen-title>{{t "Manual.Posts.Tags"}}</h2>
        <section class="view-actions">
            <div class="gh-contentfilter gh-btn-group">
                <button class="gh-btn {{if (eq this.type "public") "gh-btn-group-selected"}}" {{action "changeType" "public"}}><span>{{t "Manual.Tags.Public_tags"}}</span></button>
                <button class="gh-btn {{if (eq this.type "internal") "gh-btn-group-selected"}}" {{action "changeType" "internal"}}><span>{{t "Manual.Tags.Internal_tags"}}</span></button>
            </div>
            <LinkTo @route="tag.new" class="gh-btn gh-btn-primary"><span>{{t "Manual.Tags.New_tag"}}</span></LinkTo>
        </section>
    </GhCanvasHeader>

    <section class="view-container content-list">
        <ol class="tags-list gh-list {{unless this.sortedTags "no-posts"}}">
            {{#if this.sortedTags}}
                <li class="gh-list-row header">
                    <div class="gh-list-header gh-list-cellwidth-70">{{t "Manual.Tags.TAG"}}</div>
                    <div class="gh-list-header gh-list-cellwidth-10">{{t "Manual.Tags.SLUG"}}</div>
                    <div class="gh-list-header gh-list-cellwidth-10">{{t "Manual.Tags.NO._OF_POSTS"}}</div>
                    <div class="gh-list-header gh-list-cellwidth-10"></div>
                </li>
                <VerticalCollection @items={{this.sortedTags}} @key="id" @containerSelector=".gh-main" @estimateHeight={{60}} @bufferSize={{20}} as |tag|>
                    <GhTagsListItem @tag={{tag}} data-test-tag-id={{tag.id}} />
                </VerticalCollection>
            {{else}}
                <li class="no-posts-box">
                    <div class="no-posts">
                            {{svg-jar "tags-placeholder" class="gh-tags-placeholder"}}
                            <h3>{{t "Manual.Tags.You_havent_created_any_type_tags_yet" type=this.type}}</h3>
                            <LinkTo @route="tag.new" class="gh-btn gh-btn-primary gh-btn-lg gh-btn-green">
                                <span>{{t "Manual.Tags.Create_a_new_tag"}}</span>
                            </LinkTo>
                    </div>
                </li>
            {{/if}}
        </ol>
    </section>
</section>

{{outlet}}
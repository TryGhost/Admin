
<header class="modal-header" data-test-modal="delete-user">
    <h1>{{t "Manual.Components.Upgrade_to_enable_custom_themes"}}</h1>
</header>
<button class="close" title="Close" {{on "click" this.closeModal}}>{{svg-jar "close"}}<span class="hidden">{{t "Manual.Components.Close"}}</span></button>

<div class="modal-body">
    <p>
        {{#if this.model.limitErrorMessage}}
            {{html-safe this.model.limitErrorMessage}}
        {{else}}
            {{t "Manual.Components.Your_current_plan_only_supports_official_themes._You_can_install_them_from_the"}} <a href="https://ghost.org/marketplace/">{{t "Manual.Components.Ghost_theme_marketplace"}}</a>.
        {{/if}}
    </p>
</div>

<div class="modal-footer">
    <button {{on "click" this.closeModal}} class="gh-btn" data-test-button="cancel-upgrade">
        <span>{{t "Manual.Components.Cancel"}}</span>
    </button>

    <button {{on "click" (action "upgrade")}} class="gh-btn gh-btn-green" data-test-button="upgrade-plan">
        <span>{{t "Manual.Components.Upgrade"}}</span>
    </button>
</div>
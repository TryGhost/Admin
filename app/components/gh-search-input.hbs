<PowerSelect
    class="ember-power-select-search"
    @search={{action "search"}}
    @onChange={{action "openSelected"}}
    @placeholder={{t "Manual.Search.Search_site..."}}
    @searchEnabled={{false}}
    @triggerComponent="gh-input-with-select/trigger"
    @renderInPlace={{true}}
    @loadingMessage={{t "Manual.Search.Loading"}}
    @extra={{hash
        autofocus=true
        inputType="search"
        inputIcon="search"
        inputIconClass="gh-nav-search-icon"
    }}
    as |name select|
>
    {{highlighted-text name.title select.searchText}}
</PowerSelect>
